---
interface Props {
  src: string;
  lgWidth?: string;
  smWidth?: string;
}

const { src, lgWidth = '55%', smWidth = '100%' } = Astro.props;
---

<video
  src={src}
  preload="true"
  autoplay
  muted
  controls
  loop
  class="video-player"
>
  <track kind="captions">
</video>

<style define:vars={{ lgWidth, smWidth }}>
  .video-player {
    width: var(--lgWidth);
    margin: 2rem auto;
    border-radius: 8px;
  }

  @media (max-width: 425px) {
    .video-player {
      width: var(--smWidth);
    }
  }
</style>